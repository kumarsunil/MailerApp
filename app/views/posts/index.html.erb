<h1>Listing posts</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th colspan="3">Content</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.name %></td>
    <td><%=h post.title %></td>
    <td><%=h post.content.split(' ').to_a[0..3].join(' ')+"..." %> <%= link_to 'More', post %></td>

    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>